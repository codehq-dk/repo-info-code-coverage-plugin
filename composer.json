{
    "name": "codehq-dk/repo-info-code-coverage-plugin",
    "description": "Code test coverage Repository Information Plugin",
    "license": "MIT",
    "minimum-stability": "dev",
    "require": {
        "php": ">=8.1",
        "codehq-dk/repo-info-contracts": "v0.0.1-alpha",
        "phpunit/php-code-coverage": "9.*"
    },
    "autoload": {
        "psr-4": {
            "CodeHqDk\\RepositoryInformation\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CodeHqDk\\RepositoryInformation\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "scripts": {
        "test": "vendor/bin/phpunit tests",
        "test-report": "vendor/bin/phpunit tests/ --coverage-html tests/CoverageReport"
    }
}
