{
    "name": "codehq-dk/repo-info-code-coverage-plugin",
    "description": "Code test coverage Repository Information Plugin",
    "license": "MIT",
    "minimum-stability": "dev",
    "require": {
        "php": ">=8.1",
        "codehq-dk/repo-info-contracts": "1.0.0-alpha2",
        "phpunit/php-code-coverage": "9.*",
        "codehq-dk/linux-bash-helper": "1.0.0-alpha2"
    },
    "autoload": {
        "psr-4": {
            "CodeHqDk\\RepositoryInformation\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CodeHqDk\\RepositoryInformation\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "lcobucci/clock": "^3.0.0"
    },
    "scripts": {
        "test": "vendor/bin/phpunit tests/Unit",
        "test-report": "vendor/bin/phpunit tests/Unit --coverage-html tests/CoverageReport"
    }
}
